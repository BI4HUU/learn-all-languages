.text, .tag, .attribute_name, .text, .white, .attribute_value, .attribute_name
	white-space pre-wrap

.line
	display flex
	flex-wrap nowrap
	padding-right 15px
	padding-left 15px
#body > .line
	padding-left 30px


.comment
	color #888


.white
	color #fff

.h1
	font-size 2rem
.h2
	font-size 1.5rem
.h3
	font-size 1.17rem
.h4
	font-size 1rem
.h5
	font-size .83rem
.h6
	font-size .67rem

a[class~="button"]
	display block
	cursor pointer
	padding 5px 15px
	margin 10px 0 
	text-decoration none


.body_menu
	display flex
	min-height 100%

#body_wrap
	overflow auto
	margin-top 60px	

#body
	display flex
	flex-wrap wrap
	padding-top 18px

#menu
	display none
	padding-top 10px
	padding-bottom 10px
	margin-top 60px	
	// overflow-y auto

.see
	display block !important

.accent
	animation accent 2s infinite linear

@keyframes accent
	0%
		background rgba(255,255,255 .2)
	30%
		background rgba(0,0,0 .2)
	100%
		background rgba(255,255,255 .2)

.menu_item, .menu_item_wrap
	padding 5px 15px
	white-space nowrap
	cursor pointer
	box-sizing border-box

.menu_item_wrap
	display flex
	padding 0

.menu_item_header
	padding 15px 15px 0 15px

.end
	margin-left auto

.Theme_dark
	color #fff
	background #1e1e1e
	.text
		color #eee
	#menu
		color #ccc
		background rgba(8, 8, 8, .8)
	a[class~="button"]
		border 1px solid #eee
		color #fff
	a[class~="button"]:hover
		background #000
		color #fff
	.menu_item_active
		border 1px solid #eee
	.menu_item:hover, .menu_item_active
		background #000
		color #fff
	.menu_item_header:hover
		color #ccc
		background rgba(8, 8, 8, .0)


.Theme_lite
	color #000
	background #eeeeee
	.text
		color #222
	#menu
		color #333
		background rgba(222, 222, 222, .8)
	a[class~="button"]
		border 1px solid #444
		color #000
	.menu_item_active
		border 1px solid #444
	.menu_item:hover, .menu_item_active, a[class~="button"]:hover
		background #fff
		color #000
	.attribute_name
		color #800000
	.menu_item_header:hover
		color #333
		background rgba(8, 8, 8, .0)

